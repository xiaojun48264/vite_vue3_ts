{
    "name": "vite_vue3_ts",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build",
        "preview": "vite preview",
        "lint": "eslint --ext .js,.vue,.ts,.tsx,.jsx src",
        "lint:fix": "npx eslint ./src/**/*.vue,./src/**/*.ts,./src/**/*.tsx,./src/**/*.jsx --fix",
        "stylelint": "npx stylelint --aei .vue,.scss src",
        "stylelint:fix": "npx stylelint ./src/**/*.vue,./src/**/*.scss --fix"
    },
    "dependencies": {
        "vue": "^3.2.25"
    },
    "devDependencies": {
        "@types/node": "^17.0.21",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "@vitejs/plugin-vue": "^2.2.0",
        "eslint": "^8.11.0",
        "eslint-plugin-vue": "^8.5.0",
        "husky": "^4.3.8",
        "lint-staged": "^12.3.6",
        "naive-ui": "^2.26.4",
        "postcss-html": "^1.3.0",
        "sass": "^1.49.9",
        "stylelint": "^14.5.3",
        "stylelint-config-standard-scss": "^3.0.0",
        "stylelint-scss": "^4.2.0",
        "typescript": "^4.5.4",
        "vite": "^2.8.0",
        "vue-tsc": "^0.29.8"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,vue,tsx}": [
            "eslint --fix"
        ],
        "*.{vue,scss}": [
            "stylelint --fix  --custom-syntax postcss-html"
        ]
    }
}
